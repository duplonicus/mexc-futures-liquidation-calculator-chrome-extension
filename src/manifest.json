{
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 3,
  "name": "MEXC Futures Liquidation Calculator",
  "version": "1",
  "description": "Automatically displays the long and short liquidation prices at the bottom of the trading window based on the leverage slider and the last price.",
  "author": "Duplonicus",
  "content_scripts": [
    {
      "matches": ["https://futures.mexc.com/exchange/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}

